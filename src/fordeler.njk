            <div class="carousel-dots">
                {% for testimonial in site.testimonials %}
                <button class="carousel-dot {% if loop.index == 1 %}active{% endif %}" data-index="{{ loop.index0 }}" aria-label="Testimonial {{ loop.index }}"></button>
