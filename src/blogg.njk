<!-- Featured Post -->
{% set featuredPost = collections.blog | reverse | first %}
{% if featuredPost and featuredPost.data.draft != true %}
<section class="section" style="padding: 3rem 0 2rem; background: linear-gradient(135deg, rgba(168, 218, 220, 0.08) 0%, rgba(145, 55, 149, 0.08) 100%);">
    <div class="container">
        <div style="max-width: 1100px; margin: 0 auto;">
            <div class="featured-card" style="padding: 0; overflow: hidden; background: white; border-radius: 20px; box-shadow: 0 8px 30px rgba(145, 55, 149, 0.12);">
                <div style="display: grid; grid-template-columns: 1.2fr 1fr; gap: 0; align-items: center;">
                    {% if featuredPost.data.image %}
                    <div style="height: 100%; min-height: 400px; position: relative;">
                        <img src="{{ featuredPost.data.image }}" alt="{{ featuredPost.data.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                        <div style="position: absolute; top: 1.5rem; left: 1.5rem;">
                            <span style="display: inline-block; background: white; color: var(--color-primary); padding: 0.5rem 1.2rem; border-radius: 25px; font-size: 0.85rem; font-weight: 600; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                                ‚ú® Nyeste
                            </span>
                        </div>
                    </div>
                    {% endif %}

                    <div style="padding: 3rem 2.5rem;">
                        <h2 style="margin-bottom: 1rem; font-size: 2rem; color: #333; line-height: 1.3;">{{ featuredPost.data.title }}</h2>
                        <div style="color: #b8a6c0; margin-bottom: 1.5rem; font-size: 0.9rem; font-weight: 500;">
                            <span>{{ featuredPost.data.date | dateDisplay }}</span>
                            {% if featuredPost.data.category %}
                            <span style="margin: 0 0.5rem;">‚Ä¢</span>
                            <span>{{ featuredPost.data.category }}</span>
                            {% endif %}
                        </div>
                        <p style="color: #666; margin-bottom: 2rem; line-height: 1.8; font-size: 1.05rem;">
                            {{ featuredPost.data.description }}
                        </p>
                        <a href="{{ featuredPost.url }}" class="btn-primary" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%); border: none; padding: 0.9rem 2rem; border-radius: 30px; font-weight: 500;">Les hele artikkelen ‚Üí</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}

<!-- All Posts Grid -->
<section class="section" style="padding: 3rem 0;">
    <div class="container">
        <h2 style="text-align: center; margin-bottom: 3rem; font-size: 2rem; color: #333;">Flere artikler</h2>

        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(380px, 1fr)); gap: 2.5rem; max-width: 1200px; margin: 0 auto;">
            {% set allPosts = collections.blog | reverse %}
            {% for post in allPosts %}
                {% if loop.index0 > 0 and post.data.draft != true %}
                <article class="blog-card" style="background: white; border-radius: 18px; overflow: hidden; box-shadow: 0 4px 20px rgba(145, 55, 149, 0.08); border: 1px solid rgba(168, 218, 220, 0.2);">
                    {% if post.data.image %}
                    <div style="height: 260px; overflow: hidden; position: relative;">
                        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                        {% if post.data.category %}
                        <div style="position: absolute; top: 1rem; right: 1rem;">
                            <span style="display: inline-block; background: rgba(255, 255, 255, 0.95); color: var(--color-primary); padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; backdrop-filter: blur(10px);">
                                {{ post.data.category }}
                            </span>
                        </div>
                        {% endif %}
                    </div>
                    {% endif %}

                    <div style="padding: 2rem;">
                        <h3 style="margin-bottom: 0.8rem; font-size: 1.5rem; line-height: 1.4;">
                            <a href="{{ post.url }}" style="color: #333; text-decoration: none;">{{ post.data.title }}</a>
                        </h3>

                        <div style="color: #b8a6c0; margin-bottom: 1.2rem; font-size: 0.85rem; font-weight: 500;">
                            {{ post.data.date | dateDisplay }}
                        </div>

                        <p style="color: #666; margin-bottom: 1.8rem; line-height: 1.7; font-size: 1rem;">
                            {{ post.data.description }}
                        </p>

                        <a href="{{ post.url }}" class="btn-primary" style="display: inline-block; padding: 0.8rem 2rem; font-size: 0.95rem; border-radius: 25px; background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%); color: white; border: none; font-weight: 600; box-shadow: 0 4px 15px rgba(145, 55, 149, 0.2);">
                            Les mer ‚Üí
                        </a>
                    </div>
                </article>
                {% endif %}
            {% endfor %}
        </div>

        {% if collections.blog.length == 0 %}
        <div style="text-align: center; padding: 4rem 2rem; background: var(--color-light); border-radius: 12px;">
            <div style="font-size: 3rem; margin-bottom: 1rem;">üìù</div>
            <h3 style="margin-bottom: 0.5rem;">Ingen bloggposter enn√•</h3>
            <p style="color: #666;">Kom tilbake snart for spennende artikler om energiterapi og velv√¶re!</p>
        </div>
        {% endif %}
    </div>
</section>

